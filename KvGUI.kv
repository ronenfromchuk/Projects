<DbGenWidget>:
    airline_companies: airline_companies
    customers: customers
    administrators: administrators
    flights_per_company: flights_per_company
    tickets_per_customer: tickets_per_customer

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2


            Label:
                text: "Airline Companies: "
            TextInput:
                id: airline_companies
                multinline:False
            Label:
                text: "Customers: "
            TextInput:
                id: customers
                multiline:False
            Label:
                text: "Administrators: "
            TextInput:
                id: administrators
                multinline:False
            Label:
                text: "Flights Per Company: "
            TextInput:
                id: flights_per_company
                multiline:False
            Label:
                text: "Tickets Per Customer: "
            TextInput:
                id: tickets_per_customer
                multinline:False

        GridLayout:
            cols:2

            Label:
                text: "Add to DB: "

            Label:
                text: "Replace DB: "

            CheckBox:
                id: rbutton1
                group: 'radio button'
                state: 'down'
                on_press: root.switchstate1()

            CheckBox:
                id: rbutton2
                group: 'radio button'
                state: 'normal'
                on_press: root.switchstate2()

        Button:
            text:"Submit"
            on_press: root.btn()

        Label:
            id: alerts_label
            text: root.alerts_label